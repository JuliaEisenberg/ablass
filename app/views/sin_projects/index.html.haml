= content_for :header_back_button do
  %a.btn.btn-default{href: sins_path}
    %span.glyphicon.glyphicon-chevron-left
    Sins

%h1= t('.title', sin_name: current_sin.name)
%ul.list-unstyled.link-list
  - for sin_project in @sin_projects
    %li{style: "background-image: url('#{sin_project.small_picture_url}')"}
      %a{href: sin_project_url(current_sin, sin_project)}
        .text
          %h2= sin_project.name
          %p= sin_project.description
